            <div class="column text-center">
                <div class="row">
                    <h2><a class="navig" href="/upload">Upload</a></h2>
                </div>
				<% files = Dir.entries("uploads/")%>
				<% for i in 1..2%>
					<% files.shift()%> 
				<% end%>
                <% files.each { |file|%>
					<div class="row">
						<h2><a class="navig" href="/<%=file.chomp(".txt")%>"><%= file.chomp(".txt")%></a></h2>
					</div>
				<%}%>
            </div>
        </div>
        <hr>
		
    </body>
</html>